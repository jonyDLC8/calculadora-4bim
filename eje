using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace calculadora_clas
{
    class menu
    {
        private int i = 0;

        public int menu(
            {
            Console.writeline("ingrese el simbolo para realizer la operación ");
            Console.writeline("______________________________________");
            Console.writeline("  +  ");
            Console.writeline("   -  ");
            Console.writeline("  *  ");
            Console.writeline("   /  ")
            Console.writeline("   √  ");
            Console.writeline("______________________________________");
            i = int.Parse(Console.ReadLine());
            return i;

            try
            {
                Console.Write("Ingrese un simbolo:");
                string linea = Console.ReadLine();
                var i = int.Parse(linea);
            }
            catch
            {
                Console.Write("Debe ingresar obligatoriamente un simbolo.");

                Console.ReadLine();
                Application.Restart();
            }
        }
    }
}

